<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scroll">

  <ImageView
      android:layout_width="409dp"
      android:layout_height="729dp"

      android:background="#C1A4A4"
      tools:layout_editor_absoluteX="-18dp"
      tools:layout_editor_absoluteY="-18dp">
  </ImageView>


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="96dp"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="120dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="100dp"
      android:paddingTop="29dp"
      android:paddingBottom="10dp"
      android:text="Your Profile"
      android:textColor="@color/black"
      android:textSize="26dp"
      android:textStyle="bold" />

  <TextView
        android:id="@+id/showName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:hint="Name"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/showCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/showEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/showPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/btnBackDashboard"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:backgroundTint="#1E4AE9"
        android:text="Back To Dashboard" />

    <Button
        android:id="@+id/btnBackProfileActivity"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:backgroundTint="#D55271"
        android:text="Edit your Profile" />

</RelativeLayout>